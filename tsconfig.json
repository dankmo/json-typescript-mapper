{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true
  },
  "filesGlob": [
    "index.ts",
    "./spec/**/*.ts",
    "!./node_modules/**/*.ts",
    "typings-custom/*.ts",
    "typings/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}